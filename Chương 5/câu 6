from mymodule2 import sort_list, find_max
n = int(input("Nhập số lượng phần tử của danh sách: "))
lst = []
for i in range(n):
    value = float(input(f"Nhập phần tử thứ {i + 1}: "))
    lst.append(value)
sorted_list = sort_list(lst)
max_value = find_max(lst)
min_value = min(lst)
max_index = lst.index(max_value)
min_index = lst.index(min_value)
print(f"Danh sách đã sắp xếp: {sorted_list}")
print(f"Phần tử lớn nhất: {max_value} ở vị trí {max_index}")
print(f"Phần tử nhỏ nhất: {min_value} ở vị trí {min_index}")
