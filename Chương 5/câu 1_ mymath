def arena_of_circle(radius):
    return 3.14159 * radius **2
def perimeter_of_circle(radius):
    return 2 * 3.14159 * radius
def square(x):
    return x ** 2
def sqrt(x):
    if x < 0:
        return "Không thể tính căn bậc 2 của số âm"
    return x ** 0.5
def factorial(n):
    if n < 0:
        return "Không thể tính giai thừa của số âm"
    result = 1
    for i in range(1, n+1):
        result *= i
    return result
